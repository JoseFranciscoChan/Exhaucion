public class CalcularPi {

   
    public static void main(String[] args) {
  
   
   
    int Nlados=6;
    double Li=1;
    double Lin;
    double x;
    double a;
    double b;
    double NL;
    double P;
    double pd;
       
        
    for(Nlados=6; Nlados<12288;){
        
        x=Li/2;
        
        a=Math.sqrt(1-(Math.pow(x, 2)));
        b=1-a;
        NL=Math.sqrt((Math.pow(x, 2))+ (Math.pow(b, 2)));
        
        P=Nlados*Li;
       
        pd=P/2; 
        
        
        System.out.println(Nlados+" - "+Li+" - "+x+" - "+a+" - "+b+" - "+NL+" - "+P+" - "+pd); 
     Li=NL;
     Nlados=Nlados*2;
    }
    
   
    }
    
}
